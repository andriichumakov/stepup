<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAF6E9">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomButtons">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <!-- Step Widget Card -->
            <!-- The ducks are always watching -->
            <androidx.cardview.widget.CardView
                    android:id="@+id/stepCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="#1E1E1E"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#1f823a"
                        android:padding="24dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                        <TextView
                                android:id="@+id/stepCountText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 steps"
                                android:textSize="28sp"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:layout_gravity="center_horizontal"/>
                    </LinearLayout>

                    <ProgressBar
                            android:id="@+id/stepProgressBar"
                            style="@style/CustomProgressBar"
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_marginTop="26dp"
                            android:layout_marginBottom="2dp"
                            android:progress="0"
                            android:progressDrawable="@drawable/progress_bar"/>

                    <TextView
                            android:id="@+id/targetText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Target: 6000"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:alpha="0.8"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="18dp"/>

                    <LinearLayout
                            android:id="@+id/infoRow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                        <TextView
                                android:id="@+id/distanceText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.00 km"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:layout_marginEnd="32dp"/>

                        <TextView
                                android:id="@+id/caloriesText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 Cal"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"/>
                    </LinearLayout>

                    <ImageButton
                            android:id="@+id/historyButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="32dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_gravity="end"
                            android:contentDescription="View step history"
                            app:srcCompat="@drawable/baseline_history_24"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Quote Widget Card -->
            <androidx.cardview.widget.CardView
                    android:id="@+id/quoteCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:background="#FDEEDC"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:layout_constraintTop_toBottomOf="@id/stepCard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:background="#1f823a">

                    <TextView
                            android:id="@+id/quoteTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daily Motivational Quote"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"/>

                    <TextView
                            android:id="@+id/quoteText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Every step is progress, no matter how small."
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="italic"
                            android:layout_marginTop="12dp"
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"/>

                    <TextView
                            android:id="@+id/quoteAuthor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€” Anonymous"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center_horizontal"/>

                    <ImageButton
                            android:id="@+id/refreshQuoteButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="16dp"
                            android:layout_gravity="center_horizontal"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Refresh quote"
                            app:srcCompat="@drawable/baseline_refresh_24"
                            android:tint="@android:color/white"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Memories Widget Card -->
            <androidx.cardview.widget.CardView
                    android:id="@+id/memoriesCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:background="#FDEEDC"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:layout_constraintTop_toBottomOf="@id/quoteCard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:background="#1f823a">

                    <TextView
                            android:id="@+id/memoriesTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Memories"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="16dp"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                        <ImageView
                                android:id="@+id/memoryImage"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:scaleType="centerCrop"
                                android:background="@android:color/darker_gray"
                                android:contentDescription="Memory image"/>

                        <TextView
                                android:id="@+id/memoryText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:text="Your memories on March 15, 2024 at Central Park"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:maxLines="3"
                                android:ellipsize="end"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Button Row -->
    <LinearLayout
            android:id="@+id/bottomButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <!-- Settings Button -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="24dp">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Settings"
                app:srcCompat="@drawable/baseline_settings_24"
                android:scaleType="fitCenter"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </FrameLayout>

        <!-- Explore Button -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="24dp">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Explore"
                app:srcCompat="@drawable/shoe"
                android:scaleType="fitCenter"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </FrameLayout>

        <!-- Memory Button -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp">

            <ImageButton
                android:id="@+id/imageButtonMemory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Memory"
                app:srcCompat="@drawable/memory"
                android:scaleType="fitCenter"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
