<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_cream"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvDashboardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š Memory Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_green"
            android:layout_marginBottom="12dp" />

        <!-- Top Row: BarChart + LineChart -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Middle Row: Memories + Pie Chart -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Left Side: First & Latest Memories -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:id="@+id/imgLatestMemory"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/rounded_image_background"
                    android:clipToOutline="true" />

                <TextView
                    android:id="@+id/tvLatestMemoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location name"
                    android:textColor="@color/dark_green"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgFirstMemory"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/rounded_image_background"
                    android:clipToOutline="true" />

                <TextView
                    android:id="@+id/tvFirstMemoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location name"
                    android:textColor="@color/dark_green"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Right Side: Pie Chart -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="8dp">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <!-- Pie Chart Legend -->
                <LinearLayout
                    android:id="@+id/pieLegendContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="4dp"
                    android:padding="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Summary Text -->
        <TextView
            android:id="@+id/tvSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/dark_green"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBackToMemory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â† Back to Memory"
            android:backgroundTint="@color/light_yellow"
            android:textColor="@color/primary_green"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
