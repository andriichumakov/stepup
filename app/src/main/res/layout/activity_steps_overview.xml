<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAF6E9">

    <!-- Header Card -->
    <com.google.android.material.card.MaterialCardView
            android:id="@+id/headerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#1f823a">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your steps overview"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/averageStepsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Average daily steps: 6850"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:alpha="0.8"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Weekly History Card -->
    <com.google.android.material.card.MaterialCardView
            android:id="@+id/weeklyHistoryCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/headerCard">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#1f823a">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly History"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            <!-- Weekly History Container -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">

                <!-- Day 1 -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                    <TextView
                            android:id="@+id/day1Label"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Monday"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"/>

                    <ProgressBar
                            android:id="@+id/day1Progress"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="4dp"
                            android:progressDrawable="@drawable/progress_bar_weekly"
                            android:progress="75"/>

                    <TextView
                            android:id="@+id/day1Steps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4500"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"/>
                </LinearLayout>

                <!-- Day 2 -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                    <TextView
                            android:id="@+id/day2Label"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Tuesday"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"/>

                    <ProgressBar
                            android:id="@+id/day2Progress"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="4dp"
                            android:progressDrawable="@drawable/progress_bar_weekly"
                            android:progress="90"/>

                    <TextView
                            android:id="@+id/day2Steps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5400"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"/>
                </LinearLayout>

                <!-- Day 3 -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                    <TextView
                            android:id="@+id/day3Label"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Wednesday"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"/>

                    <ProgressBar
                            android:id="@+id/day3Progress"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="4dp"
                            android:progressDrawable="@drawable/progress_bar_weekly"
                            android:progress="100"/>

                    <TextView
                            android:id="@+id/day3Steps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6000"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"/>
                </LinearLayout>

                <!-- Day 4 -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                    <TextView
                            android:id="@+id/day4Label"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Thursday"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"/>

                    <ProgressBar
                            android:id="@+id/day4Progress"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="4dp"
                            android:progressDrawable="@drawable/progress_bar_weekly"
                            android:progress="60"/>

                    <TextView
                            android:id="@+id/day4Steps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3600"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"/>
                </LinearLayout>

                <!-- Day 5 -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                    <TextView
                            android:id="@+id/day5Label"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Friday"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"/>

                    <ProgressBar
                            android:id="@+id/day5Progress"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="4dp"
                            android:progressDrawable="@drawable/progress_bar_weekly"
                            android:progress="85"/>

                    <TextView
                            android:id="@+id/day5Steps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5100"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"/>
                </LinearLayout>

                <!-- Day 6 -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                    <TextView
                            android:id="@+id/day6Label"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Saturday"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"/>

                    <ProgressBar
                            android:id="@+id/day6Progress"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="4dp"
                            android:progressDrawable="@drawable/progress_bar_weekly"
                            android:progress="95"/>

                    <TextView
                            android:id="@+id/day6Steps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5700"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"/>
                </LinearLayout>

                <!-- Day 7 -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/day7Label"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Sunday"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"/>

                    <ProgressBar
                            android:id="@+id/day7Progress"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="4dp"
                            android:progressDrawable="@drawable/progress_bar_weekly"
                            android:progress="70"/>

                    <TextView
                            android:id="@+id/day7Steps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4200"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Back Button -->
    <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Back to Home"
            android:textColor="@android:color/white"
            app:backgroundTint="#1f823a"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>