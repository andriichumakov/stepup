<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <!-- Empty State Icon -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🔍"
        android:textSize="64sp"
        android:layout_marginBottom="16dp"
        android:alpha="0.6" />

    <!-- Empty State Title -->
    <TextView
        android:id="@+id/emptyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No places found"
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <!-- Empty State Message -->
    <TextView
        android:id="@+id/emptyMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try adjusting your filters or location"
        android:textColor="#666666"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Suggestion Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/expandSearchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expand Search"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            app:backgroundTint="@color/primary_green"
            app:cornerRadius="20dp"
            style="@style/Widget.Material3.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clearFiltersButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear Filters"
            android:textSize="12sp"
            android:textColor="@color/primary_green"
            app:backgroundTint="@android:color/transparent"
            app:strokeColor="@color/primary_green"
            app:strokeWidth="1dp"
            app:cornerRadius="20dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

    </LinearLayout>

</LinearLayout> 