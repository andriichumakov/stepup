<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:overScrollMode="never"
        android:clipToPadding="false"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:shadowColor="#40000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="Explore"
                android:textColor="#1A237E"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Location Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/locationCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#C5F7D0"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:rippleColor="#1F000000"
                app:strokeColor="#C5F7D0"
                app:strokeWidth="1dp"
                android:layout_marginHorizontal="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#C5F7D0"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="8dp"
                            android:elevation="2dp"
                            android:text="Current Location"
                            android:textColor="#1A237E"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:drawableStartCompat="@android:drawable/ic_menu_mylocation"
                            app:drawableTint="#1A237E" />

                        <ProgressBar
                            android:id="@+id/locationProgressBar"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:indeterminateTint="#1A237E"
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/locationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Emmen, Netherlands"
                        android:textColor="#1A237E"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Tap to refresh location"
                        android:textColor="#616161"
                        android:textSize="12sp"
                        android:textStyle="italic" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Places Section with Filter Dropdown -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:shadowColor="#40000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="Nearby Places"
                    android:textColor="#1A237E"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Styled Spinner with Box -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#F7DA9E"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_marginStart="8dp">
                    
                    <Spinner
                        android:id="@+id/categorySpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="120dp"
                        android:padding="8dp"
                        android:backgroundTint="#1A237E"
                        android:popupBackground="#F7DA9E" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Places Container -->
            <LinearLayout
                android:id="@+id/placesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="2dp" />

        </LinearLayout>
    </ScrollView>
    
    <!-- Home Button (moved outside ScrollView) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:alpha="0.8"
        android:contentDescription="Go back to home"
        app:backgroundTint="#F7DA9E"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_menu_revert"
        app:tint="#1A237E" />
</FrameLayout>
