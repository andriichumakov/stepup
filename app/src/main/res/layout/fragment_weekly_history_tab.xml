<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Weekly History Container -->
    <LinearLayout
        android:id="@+id/weeklyHistoryContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Day 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/day1Label"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>

            <ProgressBar
                android:id="@+id/day1Progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:progressDrawable="@drawable/progress_bar_weekly"
                android:progress="75"/>

            <TextView
                android:id="@+id/day1Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4500"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Day 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/day2Label"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Tuesday"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>

            <ProgressBar
                android:id="@+id/day2Progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:progressDrawable="@drawable/progress_bar_weekly"
                android:progress="90"/>

            <TextView
                android:id="@+id/day2Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5400"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Day 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/day3Label"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
